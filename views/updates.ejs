  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28px;
  border: 1px solid rgba(255,255,255,0.1);
}

/* Mobile */
@media (max-width: 600px) {
  .updates-page { padding: 20px 12px 40px; }
