<style>
.updates-page {
  max-width: 800px;
  margin: 0 auto;
  padding: 30px 20px 60px;
}
.updates-header {
  text-align: center;
  margin-bottom: 40px;
}
.updates-header h1 {
  font-family: Orbitron, sans-serif;
  font-size: 32px;
  background: linear-gradient(135deg, #FFD700, #FF6B35);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-bottom: 8px;
}
.updates-header p {
  color: rgba(255,255,255,0.6);
  font-size: 15px;
}

/* Timeline */
.updates-timeline {
  position: relative;
  padding-left: 40px;
}
.updates-timeline::before {
  content: '';
  position: absolute;
  left: 16px;
  top: 0;
  bottom: 0;
  width: 3px;
  background: linear-gradient(to bottom, #FFD700, #00C9A7, #845EC2, #FF6B35);
  border-radius: 3px;
}

/* Version block */
.update-block {
  position: relative;
  margin-bottom: 40px;
  animation: fadeSlideIn 0.6s ease-out both;
}
.update-block:nth-child(1) { animation-delay: 0.1s; }
.update-block:nth-child(2) { animation-delay: 0.2s; }
.update-block:nth-child(3) { animation-delay: 0.3s; }
.update-block:nth-child(4) { animation-delay: 0.4s; }

@keyframes fadeSlideIn {
  from { opacity: 0; transform: translateY(20px); }
  to { opacity: 1; transform: translateY(0); }
}

/* Dot on timeline */
.update-dot {
  position: absolute;
  left: -32px;
  top: 8px;
  width: 20px;
  height: 20px;
  border-radius: 50%;
  border: 3px solid;
  background: #1a0a2e;
  z-index: 1;
}
.update-block.latest .update-dot {
  border-color: #FFD700;
  background: #FFD700;
  box-shadow: 0 0 12px rgba(255,215,0,0.6);
}
.update-block:nth-child(2) .update-dot { border-color: #00C9A7; }
.update-block:nth-child(3) .update-dot { border-color: #845EC2; }
.update-block:nth-child(4) .update-dot { border-color: #FF6B35; }

/* Version card */
.update-card {
  background: linear-gradient(135deg, rgba(255,255,255,0.06), rgba(255,255,255,0.02));
  border: 1px solid rgba(255,255,255,0.1);
  border-radius: 16px;
  padding: 24px;
  backdrop-filter: blur(10px);
  transition: transform 0.2s, box-shadow 0.2s;
}
.update-card:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 30px rgba(0,0,0,0.3);
}
.update-block.latest .update-card {
  border-color: rgba(255,215,0,0.3);
  box-shadow: 0 4px 20px rgba(255,215,0,0.1);
}

/* Version header */
.update-version-row {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 6px;
  flex-wrap: wrap;
}
.update-version {
  font-family: Orbitron, sans-serif;
  font-size: 22px;
  font-weight: 700;
  color: #FFD700;
}
.update-badge {
  display: inline-block;
  font-size: 10px;
  font-weight: 700;
  padding: 3px 10px;
  border-radius: 12px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}
.badge-latest {
  background: linear-gradient(135deg, #FF6B35, #FFD700);
  color: #1a0a2e;
}
.badge-major {
  background: linear-gradient(135deg, #00C9A7, #00E5FF);
  color: #1a0a2e;
}
.badge-update {
  background: linear-gradient(135deg, #845EC2, #B39CD0);
  color: #fff;
}
.badge-launch {
  background: linear-gradient(135deg, #FF6B35, #FF9671);
  color: #1a0a2e;
}

.update-title {
  font-family: Orbitron, sans-serif;
  font-size: 16px;
  color: #fff;
  margin-bottom: 4px;
}
.update-date {
  font-size: 12px;
  color: rgba(255,255,255,0.4);
  margin-bottom: 16px;
}

/* Feature list */
.update-features {
  list-style: none;
  padding: 0;
  margin: 0;
}
.update-features li {
  display: flex;
  align-items: flex-start;
  gap: 10px;
  margin-bottom: 10px;
  font-size: 13px;
  line-height: 1.5;
  color: rgba(255,255,255,0.8);
}
.update-features li .uf-emoji {
  font-size: 18px;
  flex-shrink: 0;
  margin-top: 1px;
}
.update-features li strong {
  color: #FFD700;
}

/* Stats row */
.update-stats {
  display: flex;
  gap: 12px;
  margin-top: 16px;
  flex-wrap: wrap;
}
.update-stat {
  background: rgba(255,255,255,0.05);
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 10px;
  padding: 10px 14px;
  text-align: center;
  flex: 1;
  min-width: 80px;
}
.update-stat-value {
  font-family: Orbitron, sans-serif;
  font-size: 20px;
  font-weight: 700;
  color: #FFD700;
}
.update-stat-label {
  font-size: 10px;
  color: rgba(255,255,255,0.5);
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-top: 2px;
}

/* Screenshots placeholder */
.update-screenshots {
  display: flex;
  gap: 8px;
  margin-top: 14px;
  overflow-x: auto;
  padding-bottom: 4px;
}
.update-screenshot {
  width: 100px;
  height: 70px;
  border-radius: 8px;
