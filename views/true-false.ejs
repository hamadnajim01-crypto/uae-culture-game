<%- include('partials/header') %>

<div class="page-header">
  <div class="section-badge">⚡ SPEED ROUND</div>
  <h1><span class="gold" data-i18n="trueOrFalse">True</span> <span data-i18n="falsePage">or False</span></h1>
  <p data-i18n="trueFalseHeader">15 statements — how fast can you answer them all?</p>
</div>

<div class="quiz-container">
  <div id="tfStart" class="start-screen">
    <h2 data-i18n="trueFalseTitle">True or False Speed Round!</h2>
    <p data-i18n="trueFalseDesc">Read each statement and decide if it's TRUE or FALSE. The timer is ticking!</p>
    <button class="btn btn-primary btn-lg" onclick="startTrueFalse()"><span data-i18n="start">START</span> ⚡</button>
  </div>

  <div id="tfArea" style="display:none;">
    <div class="quiz-progress">
      <div class="quiz-progress-bar"><div class="quiz-progress-fill" id="tfProgressFill"></div></div>
      <div class="quiz-progress-text" id="tfProgressText">1/15</div>
    </div>
    <div class="tf-timer" id="tfTimer">⏱️ 0:00</div>
    <div class="quiz-hearts" id="tfHearts"></div>

    <div class="quiz-card" id="tfCard">
      <div class="tf-statement" id="tfStatement"></div>
      <div class="tf-buttons" id="tfButtons">
        <button class="tf-btn tf-true" onclick="answerTF(true)" data-i18n="trueBtn">✅ TRUE</button>
        <button class="tf-btn tf-false" onclick="answerTF(false)" data-i18n="falseBtn">❌ FALSE</button>
      </div>
      <div class="quiz-fact" id="tfFact" style="display:none;"></div>
      <div class="quiz-next">
        <button class="btn btn-primary" id="tfNextBtn" style="display:none;" onclick="nextTFQuestion()" data-i18n="next">NEXT →</button>
      </div>
    </div>
  </div>
</div>

<script src="/js/true-false.js"></script>
<%- include('partials/footer') %>
